<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title_layout"
        android:id="@+id/titleLayout"/>

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="关于NEJM医学前沿"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        android:drawableEnd="@drawable/icon_mine_image_next"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <TextView
        android:id="@+id/textViewUsage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="使用说明"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        android:drawableEnd="@drawable/icon_mine_image_next"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAbout" />

    <TextView
        android:id="@+id/textViewService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="服务条款"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        android:drawableEnd="@drawable/icon_mine_image_next"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsage" />

    <TextView
        android:id="@+id/textViewPrivacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="隐私政策"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        android:drawableEnd="@drawable/icon_mine_image_next"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewService" />

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="版权说明"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        android:drawableEnd="@drawable/icon_mine_image_next"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrivacy" />

    <TextView
        android:id="@+id/textViewClean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="14dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="清空下载与缓存"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersion" />

    <TextView
        android:id="@+id/textViewPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="推送通知"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewClean" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewPush" />

    <View
        android:id="@+id/view12"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D6D6D6"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@+id/textViewPush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPush"/>

    <TextView
        android:id="@+id/textViewQuit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="14dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="退出当前账号"
        android:textColor="#C92700"
        android:textSize="15sp"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:drawablePadding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view12" />
</android.support.constraint.ConstraintLayout>