<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="124dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/paper_img"
app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="124dp"
        android:layout_height="93dp"
        app:roundedCornerRadius="3dp"
        app:overlayImage="@drawable/gradient_mask"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView android:id="@+id/paper_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="9dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/paper_img"
        />
    <TextView android:id="@+id/paper_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:textSize="9dp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/paper_name"
        />
</android.support.constraint.ConstraintLayout>