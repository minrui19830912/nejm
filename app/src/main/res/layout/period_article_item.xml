<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/month"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        android:text="12"
        android:textColor="@color/color_4a" />

    <TextView
        android:id="@+id/month_text"
        app:layout_constraintLeft_toRightOf="@id/month"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/month"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:text="æœˆ"
        android:textColor="@color/color_999" />

    <TextView
        android:id="@+id/year"
        app:layout_constraintRight_toRightOf="@id/month_text"
        app:layout_constraintTop_toBottomOf="@id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="10sp"
        android:text="2018"
        android:textColor="@color/color_4a" />

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/year"
        android:background="@color/color_4a" />

    <com.android.nejm.widgets.NoScrollGridView
        android:id="@+id/period_gridview"
        app:layout_constraintLeft_toRightOf="@id/year"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/month"
        android:numColumns="4"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="10dp"
        android:layout_marginLeft="22dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>