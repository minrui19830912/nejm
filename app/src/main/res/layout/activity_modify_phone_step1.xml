<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/common_title_layout"
        android:id="@+id/titleLayout"/>

    <EditText
        android:id="@+id/editTextOldPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:drawablePadding="17dp"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:background="@color/transparent"
        android:maxLength="11"
        android:maxLines="1"
        android:inputType="phone"
        android:hint="旧手机号码"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <EditText
        android:id="@+id/editTextVerifyCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:drawablePadding="17dp"
        android:drawableBottom="@drawable/horizontal_line_nor"
        android:background="@color/transparent"
        android:hint="验证码"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewSendVerifyCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOldPhone" />

    <TextView
        android:id="@+id/textViewSendVerifyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="25dp"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="发送验证码"
        android:textColor="#C92700"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextVerifyCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextVerifyCode"
        app:layout_constraintTop_toTopOf="@+id/editTextVerifyCode" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:background="@drawable/login_bg_shape"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextVerifyCode" />
</android.support.constraint.ConstraintLayout>