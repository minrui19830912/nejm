<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="34dp"
        android:hint="手机号码"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextVerifyCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="验证码"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextPhone"
        app:layout_constraintEnd_toStartOf="@+id/textViewSendVerifyCode"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

    <TextView
        android:id="@+id/textViewSendVerifyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="发送验证码"
        android:textColor="#C92700"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextVerifyCode"
        app:layout_constraintEnd_toEndOf="@id/editTextPhone"
        app:layout_constraintTop_toTopOf="@+id/editTextVerifyCode" />

    <EditText
        android:id="@+id/editTextPwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="重设密码（最少6位）"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextVerifyCode"
        app:layout_constraintEnd_toStartOf="@+id/textViewShowPwd"
        app:layout_constraintTop_toBottomOf="@+id/editTextVerifyCode" />

    <TextView
        android:id="@+id/textViewShowPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="显示密码"
        android:textColor="#C92700"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPwd"
        app:layout_constraintEnd_toEndOf="@id/editTextPhone"
        app:layout_constraintTop_toTopOf="@+id/editTextPwd" />

    <EditText
        android:id="@+id/editTextPwdAgain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="再次输入重设密码"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextPwd"
        app:layout_constraintEnd_toStartOf="@+id/textViewShowPwdAgain"
        app:layout_constraintTop_toBottomOf="@+id/editTextPwd" />

    <TextView
        android:id="@+id/textViewShowPwdAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="显示密码"
        android:textColor="#C92700"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPwdAgain"
        app:layout_constraintEnd_toEndOf="@id/editTextPhone"
        app:layout_constraintTop_toTopOf="@+id/editTextPwdAgain" />

    <Button
        android:id="@+id/textViewConfirm"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/login_bg_shape"
        android:padding="7dp"
        android:text="确认"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPwdAgain" />

</android.support.constraint.ConstraintLayout>