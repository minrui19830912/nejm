<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/paper_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="186dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView android:id="@+id/paper_name"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/paper_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="18dp"
        android:textSize="14sp"
        android:text="fdasfdsdfsfadfdasfsdafdasfdasfasdfasdfasdfsdadfsfdsfdsafds"
        android:textColor="@color/white"/>
    <TextView android:id="@+id/date"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paper_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:text="dfsadfasfdasfdsasdfdsfdsafdfsadsf"
        android:textColor="@color/color_9b"/>

</android.support.constraint.ConstraintLayout>