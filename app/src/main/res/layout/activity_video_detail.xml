<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.nejm.activitys.VideoDetailActivity">
    <include layout="@layout/comon_top_layout"
        android:id="@+id/titleLayout"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/draweeViewLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/textViewEnglishTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/textViewTitle"
                    app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
                    android:layout_marginTop="15dp"
                    android:textColor="#E6360B"
                    android:textSize="13sp"/>
                <View
                    android:id="@+id/viewDivider"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/horizontal_line_nor"
                    android:layout_marginTop="17dp"
                    app:layout_constraintStart_toStartOf="@+id/textViewTitle"
                    app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
                    app:layout_constraintTop_toBottomOf="@+id/textViewEnglishTitle"/>
                <TextView
                    android:id="@+id/textViewAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:layout_constraintStart_toStartOf="@+id/textViewTitle"
                    app:layout_constraintTop_toBottomOf="@+id/viewDivider"/>
                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
                    app:layout_constraintTop_toTopOf="@id/textViewAuthor"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewAuthor"
                    android:drawableStart="@drawable/dot_3dp"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/textViewField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/textViewDate"
                    app:layout_constraintTop_toTopOf="@+id/textViewAuthor"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewAuthor"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutRelatedArticle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="#F6F6F7"
                    app:layout_constraintStart_toStartOf="@+id/textViewTitle"
                    app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAuthor">
                    <View
                        android:id="@+id/viewRedLine"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="#E6360B"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/textViewTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/viewRedLine"
                        android:text="相关文章"
                        android:textColor="@color/color_c92700"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/textViewRelatedArticleTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="9dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewTips"
                        app:layout_constraintStart_toStartOf="@+id/textViewTips"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </android.support.constraint.ConstraintLayout>

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="0dp"
                    android:layout_height="266dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutRelatedArticle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/draweeViewVideoCover"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/videoView"
                    app:layout_constraintEnd_toEndOf="@+id/videoView"
                    app:layout_constraintTop_toTopOf="@+id/videoView"
                    app:layout_constraintBottom_toBottomOf="@+id/videoView"/>
                <ImageView
                    android:id="@+id/imageViewPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play_icon"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/videoView"
                    app:layout_constraintEnd_toEndOf="@+id/videoView"
                    app:layout_constraintTop_toTopOf="@+id/videoView"
                    app:layout_constraintBottom_toBottomOf="@+id/videoView" />
                <TextView
                    android:id="@+id/textViewContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/videoView"
                    app:layout_constraintEnd_toEndOf="@+id/videoView"
                    app:layout_constraintTop_toBottomOf="@+id/videoView"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/textViewUnlogin"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="登录后，可阅读全文"
        android:textColor="#C92700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textViewFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableStart="@mipmap/icon_collect_normal"
            android:drawablePadding="2dp"
            android:text="收藏"
            android:textColor="#444444"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/textViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:drawableStart="@mipmap/icon_share_normal"
            android:drawablePadding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="分享"
            android:textColor="#444444"
            android:textSize="13sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
