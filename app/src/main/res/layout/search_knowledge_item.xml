<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/white">
    <TextView android:id="@+id/textViewSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="13sp"
        android:text="NEJM: 论著文章"
        android:textColor="#C92700"/>
    <TextView android:id="@+id/paper_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSource"
        android:maxLines="2"
        android:textSize="14sp"
        android:text="病例8-2013：一位患乳腺原位癌的48岁女性"
        android:textColor="@color/black"/>
    <TextView android:id="@+id/paperContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/paper_name"
        app:layout_constraintEnd_toStartOf="@+id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="2"
        android:textSize="13sp"
        android:text="一名48岁女性在这家医院的门诊肿瘤中心查出左乳原位癌..."
        android:textColor="#4A4A4A"/>
    <TextView android:id="@+id/paperAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/paperContent"
        app:layout_constraintEnd_toStartOf="@+id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:textSize="11sp"
        android:text="Monica Morrow..."
        android:textColor="#9B9B9B"/>
    <TextView android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/paperAuthor"
        app:layout_constraintEnd_toStartOf="@+id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:text="肿瘤 • 2013.03.14"
        android:textColor="@color/color_9b"/>
    <View
        android:id="@+id/viewDivider"
        android:layout_width="36dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toStartOf="@+id/paper_img"
        app:layout_constraintTop_toTopOf="@+id/paper_img"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/paper_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>