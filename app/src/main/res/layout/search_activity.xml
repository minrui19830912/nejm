<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/common_top"
        layout="@layout/comon_top_layout" />

    <EditText
        android:id="@+id/search_box"
        app:layout_constraintTop_toBottomOf="@id/common_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/main_search_bk"
        android:drawableStart="@mipmap/icon_search"
        android:drawablePadding="11dp"
        android:padding="10dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColorHint="#5C5C5C"
        android:textColor="#5C5C5C"
        android:hint="关键字、标题、摘要..."
        android:textSize="15sp"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/search_content"
        app:layout_constraintTop_toBottomOf="@id/search_box"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/layout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/nejm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NEJM"
                android:gravity="center"

                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/tab_single_textcolor"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"

                android:button="@null"
                android:background="@drawable/single_tab_choice_button" />

            <CheckBox
                android:id="@+id/nejm_core"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="NEJM期刊荟萃"
                android:textSize="14sp"
                android:textColor="@color/tab_single_textcolor"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"

                android:button="@null"
                android:background="@drawable/single_tab_choice_button" />

            <CheckBox
                android:id="@+id/specilist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center"


                android:text="专家述评"
                android:textSize="14sp"
                android:textColor="@color/tab_single_textcolor"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"

                android:button="@null"
                android:background="@drawable/single_tab_choice_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="视频"
                android:gravity="center"

                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/tab_single_textcolor"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"

                android:button="@null"
                android:background="@drawable/single_tab_choice_button" />

            <CheckBox
                android:id="@+id/others"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="其他文章"
                android:textSize="14sp"
                android:textColor="@color/tab_single_textcolor"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"

                android:button="@null"
                android:background="@drawable/single_tab_choice_button" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/appbk" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>