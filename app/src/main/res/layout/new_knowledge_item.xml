<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/white">
    <TextView android:id="@+id/paper_name"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15sp"
        android:text="fdasfdsdfs"
        android:textColor="@color/color_4a"/>
    <TextView android:id="@+id/textViewTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10sp"
        android:text="dfsa"
        android:textColor="@color/color_9b"/>
    <TextView android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textViewTypeName"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTypeName"
        app:layout_constraintStart_toEndOf="@+id/textViewTypeName"
        android:drawableStart="@drawable/dot_3dp"
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:textSize="10sp"
        android:text="dfsa"
        android:textColor="@color/color_9b"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/paper_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:roundedCornerRadius="3dp"/>
    <TextView android:id="@+id/adver"
        app:layout_constraintRight_toRightOf="@id/paper_img"
        app:layout_constraintTop_toTopOf="@id/paper_img"
        android:textColor="#ffffff"
        android:background="@drawable/adv_bk"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_margin="4dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>